<Grid>

    checkbox_train_blind:train_blind
    checkbox_use_blind:use_blind

    checkbox_train_lamp:train_lamp
    checkbox_use_lamp:use_lamp

    

    GridLayout:
        cols:1
        rows:6
        size: root.width , root.height

        Label:
            text: "Blind"


        GridLayout:
            cols:4
            rows:1
            
            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "train model"
                CheckBox:
                    id:train_blind
                    on_press: app.chck_blind()


            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "use model"
                CheckBox:
                    id:use_blind
                    on_press: app.chck_blind()

            Button:
                text: 'close'
                on_press: app.btn_blind_close()

            Button:
                text: 'open'
                on_press: app.btn_blind_open()

        Label:
            text: "Lamp"
            

        GridLayout:
            cols:4
            rows:1
            
            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "train model"
                CheckBox:
                    id: train_lamp
                    on_press: app.chck_lamp()


            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "use model"
                CheckBox:
                    id: use_lamp
                    on_press: app.chck_lamp()
            Button:
                text: 'turn on'
                on_press: app.btn_lamp_on()

            Button:
                text: 'turn off'
                on_press: app.btn_lamp_off()


        Label:
            text: "Desktop lamp"

        GridLayout:
            cols:4
            rows:1
            
            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "train model"
                CheckBox:


            GridLayout:
                cols:1
                rows:2

                Label:
                    text: "use model"
                CheckBox:

            Button:
                text: 'turn on'
                on_press: app.btn_desktopLamp_on()

            Button:
                text: 'turn off'
                on_press: app.btn_desktopLamp_off()
        